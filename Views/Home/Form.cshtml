@* // created a form so that people can submit movies to the Application database and implemented a submission button 
 *@
 @model Application
<h1>Movie </h1>
<form method="post">
    <label class="form-label" asp-for="Category">Category:</label>
    <input class="form-label"  asp-for="Category" />
    <br />
    <label class="form-label" asp-for="Title">Title:</label>
    <input class="form-label" asp-for="Title" required />
    <br />
    <label class="form-label" asp-for="Year">Year:</label>
    <input class ="form-label" asp-for="Year" required />
    <br />
    <label class="form-label" asp-for="Director">Director:</label>
    <input class="form-label" asp-for="Director" required />
    <br />
    <label class="form-label" asp-for="Rating">Rating:</label>
    <select class="form-label" asp-for="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value ="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
 <br />
    <label class="form-label" asp-for="Edited">Edited:</label>
    <select class="form-label" asp-for="Edited" required>
        <option value = "yes">Yes</option>
        <option value="no">No</option>
    </select>
    <br />
    <label class ="form-label" asp-for="LentTo">Lent to:</label>
    <input class="form-label" asp-for="LentTo" />
    <br />
    <label class="form-label" asp-for="Notes">Notes:</label>
    <input class ="form-label" asp-for="Notes" maxlength="25" />

    <button type ="submit">Submit Application</button>

</form>